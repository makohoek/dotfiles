[alias]
    st = status
    amend = commit --amend
    dc = diff --cached
    di = diff
    tree = "log --oneline --decorate --all --graph"
    treeb = "log --oneline --decorate --graph --branches"
    ll = "!. ~/.githelpers && pretty_git_log"
    vimdiff = difftool -w -y -t vimdiff
    changelog = "log --oneline --pretty=format:'%h | %s%d [%an]'"
[user]
    email = mattijs.korpershoek@gmail.com
    name = Mattijs Korpershoek
[merge]
    tool = vimdiff
[difftool]
    tool = vimdiff
[diff]
    tool = vimdiff
[color]
    ui = true
[core]
    editor = vim
    abbrev = 12
[pretty]
    fixes = Fixes: %h (\"%s\")
[include]
    path = /home/mkorperx/work/.gitconfig
[credential]
	helper = !pass-git-helper $@
[gitlab]
	user = makohoek
